<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/internalUISettingsLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.duckduckgo.common.ui.view.listitem.SectionHeaderListItem
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:primaryText="@string/trackersBlockingExperimentalUISettings" />

    <com.duckduckgo.common.ui.view.listitem.TwoLineListItem
        android:id="@+id/trackersBlockingVariant1ExperimentalUIMode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:primaryText="@string/trackersBlockingVariant1ExperimentalUITitle"
        app:primaryTextTruncated="false"
        app:secondaryText="@string/trackersBlockingVariant1ExperimentalUIMessage"
        app:showSwitch="true" />

    <com.duckduckgo.common.ui.view.listitem.TwoLineListItem
        android:id="@+id/trackersBlockingVariant2ExperimentalUIMode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:primaryText="@string/trackersBlockingVariant2ExperimentalUITitle"
        app:primaryTextTruncated="false"
        app:secondaryText="@string/trackersBlockingVariant2ExperimentalUIMessage"
        app:showSwitch="true" />

    <com.duckduckgo.common.ui.view.listitem.TwoLineListItem
        android:id="@+id/trackersBlockingVariant3ExperimentalUIMode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:primaryText="@string/trackersBlockingVariant3ExperimentalUITitle"
        app:primaryTextTruncated="false"
        app:secondaryText="@string/trackersBlockingVariant3ExperimentalUIMessage"
        app:showSwitch="true" />

</LinearLayout>
