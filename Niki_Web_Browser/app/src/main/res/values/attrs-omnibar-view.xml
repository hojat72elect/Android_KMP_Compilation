<?xml version="1.0" encoding="utf-8"?>

<resources>
    <attr name="omnibarPosition">
        <!-- Top -->
        <enum name="top" value="0" />
        <!-- Bottom -->
        <enum name="bottom" value="1" />
    </attr>

    <!-- LegacyOmnibarView-->
    <declare-styleable name="LegacyOmnibarView">
        <attr name="omnibarPosition"/>
    </declare-styleable>

    <!-- NewOmnibarView-->
    <declare-styleable name="NewOmnibarView">
        <attr name="omnibarPosition"/>
    </declare-styleable>

    <!-- FadeOmnibarView-->
    <declare-styleable name="FadeOmnibarLayout">
        <attr name="omnibarPosition"/>
    </declare-styleable>

    <declare-styleable name="BrowserNavigationBarView">
        <attr name="showShadows" format="boolean"/>
    </declare-styleable>

</resources>