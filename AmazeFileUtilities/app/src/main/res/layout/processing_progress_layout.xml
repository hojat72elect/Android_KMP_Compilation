<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ProgressBar
        android:id="@+id/loadingProgress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/material_generic_medium"
        android:gravity="center_horizontal"
        android:indeterminate="true"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/empty_result_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sixty_four_dp"
        android:layout_marginTop="@dimen/material_generic_medium"
        android:gravity="center_horizontal"
        android:visibility="gone"
        app:srcCompat="@drawable/ic_baseline_forest_32" />

    <TextView
        android:id="@+id/infoText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/material_generic"
        android:gravity="center_horizontal"
        android:text="@string/loading"
        android:textColor="@color/white"
        android:textSize="@dimen/eighteen_sp"
        android:visibility="gone" />
</merge>