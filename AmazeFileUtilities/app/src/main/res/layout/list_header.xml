<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/second"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_header_height"
    android:layout_gravity="center_vertical"
    android:layout_marginTop="@dimen/material_generic"
    android:layout_marginBottom="@dimen/eight_dp"
    android:background="@color/navy_blue"
    android:minHeight="?android:attr/listPreferredItemHeightSmall"
    android:paddingStart="@dimen/material_generic"
    android:paddingEnd="@dimen/material_generic">

    <TextView
        android:id="@+id/header_title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:background="@drawable/background_curved_list_titles"
        android:ellipsize="marquee"
        android:gravity="center_vertical"
        android:marqueeRepeatLimit="marquee_forever"
        android:maxEms="15"
        android:minWidth="@dimen/material_generic_medium"
        android:paddingStart="@dimen/material_generic"
        android:paddingEnd="@dimen/material_generic"
        android:singleLine="true"
        android:textColor="@color/navy_blue"
        android:textSize="@dimen/fourteen_sp"
        android:textStyle="bold"></TextView>

    <TextView
        android:id="@+id/header_summary"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/eight_dp"
        android:layout_marginEnd="@dimen/eight_dp"
        android:layout_toStartOf="@id/overflow_button"
        android:gravity="center_vertical"
        android:textColor="@color/highlight_yellow"
        android:visibility="gone" />
    <!--<ImageView
        android:id="@+id/trash_button"
        app:srcCompat="@drawable/ic_round_delete_outline_yellow_32"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/material_generic"
        android:layout_marginEnd="@dimen/material_generic"
        android:layout_toStartOf="@id/overflow_button"
        android:padding="@dimen/four_dp"
        />-->
    <ImageView
        android:id="@+id/overflow_button"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:clickable="true"
        android:padding="@dimen/four_dp"
        app:srcCompat="@drawable/ic_baseline_more_vert_yellow_32" />
</RelativeLayout>
