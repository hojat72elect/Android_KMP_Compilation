<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AmazeFileUtilities" parent="Theme.MaterialComponents.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/navy_blue</item>
        <item name="colorPrimaryVariant">@color/navy_blue</item>
        <item name="colorOnPrimary">@color/highlight_yellow</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue</item>
        <item name="colorSecondaryVariant">@color/blue</item>
        <item name="colorOnSecondary">@color/blue</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:navigationBarColor" tools:targetApi="l">@color/yellow_dark</item>
        <!-- Customize your theme here. -->
        <item name="actionBarTheme">@style/ThemeOverlay.Actionbar</item>
        <item name="colorAccent">@color/highlight_yellow</item>
        <item name="android:windowBackground">@color/navy_blue</item>
    </style>

    <style name="Theme.AmazeFileUtilities.Dark" parent="Theme.MaterialComponents">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/navy_blue</item>
        <item name="colorPrimaryVariant">@color/navy_blue</item>
        <item name="colorOnPrimary">@color/highlight_yellow</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue</item>
        <item name="colorSecondaryVariant">@color/blue</item>
        <item name="colorOnSecondary">@color/blue</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:navigationBarColor" tools:targetApi="l">@color/yellow_dark</item>
        <!-- Customize your theme here. -->
        <item name="actionBarTheme">@style/ThemeOverlay.Actionbar</item>
        <item name="colorAccent">@color/highlight_yellow</item>
        <item name="android:windowBackground">@color/navy_blue</item>
    </style>

    <style name="Theme.Transparent" parent="android:Theme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <!-- Bottom sheet dialog -->
    <style name="appBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/appModalStyle</item>
    </style>

    <style name="appModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
        <item name="behavior_peekHeight">@dimen/material_sheet_peek_height</item>
        <item name="behavior_hideable">false</item>
    </style>

    <style name="Theme.AmazeFileUtilities.FullScreen" parent="Theme.AmazeFileUtilities">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.AmazeFileUtilities.FullScreen.Dark" parent="Theme.AmazeFileUtilities.Dark">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/black</item>
    </style>

    <style name="Theme.AmazeFileUtilities.FullScreen.Dark.Fallback" parent="Theme.AmazeFileUtilities.Dark">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/black</item>
    </style>

    <style name="BottomNavigationTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/blue</item>
        <item name="android:textColorSecondary">@color/blue</item>
    </style>

    <style name="ThemeOverlay.Actionbar" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar">
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <style name="MaterialButton.White" parent="Widget.MaterialComponents.Button">x
        <item name="materialThemeOverlay">@style/MaterialButtonWhiteTheme</item>
    </style>

    <style name="MaterialButtonWhiteTheme">
        <item name="colorPrimary">@color/white</item>
        <item name="colorOnPrimary">@color/navy_blue</item>
    </style>

    <style name="custom_action_mode_dark" parent="Widget.Material3.ActionMode">
        <item name="android:textColor">@color/white</item>
        <item name="popupMenuBackground">@drawable/popup_background</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:itemBackground">@drawable/popup_item_background</item>
        <item name="itemBackground">@drawable/popup_item_background</item>
    </style>

    <style name="Custom.Dialog.Dark" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:windowBackground">@drawable/background_curved_recents</item>
        <item name="android:windowMinWidthMinor">85%</item>
    </style>

    <style name="Custom.Dialog.Dark.NoStretch" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:windowBackground">@drawable/background_curved_recents</item>
    </style>

    <style name="roundedImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/twenty_four_dp</item>
    </style>

    <style name="Wel_WelcomeScreenBaseTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="Wel_TextContainer">
        <item name="android:paddingTop">@dimen/wel_text_top_padding</item>
        <item name="android:paddingBottom">@dimen/wel_text_bottom_padding</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Wel_TransparentActionBar" parent="Base.Widget.AppCompat.ActionBar">
        <item name="android:background">@color/wel_transparent</item>
    </style>

    <style name="WelcomeScreenTheme" parent="Wel_WelcomeScreenBaseTheme">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="welcomeLayoutFitsSystemWindows">true</item>
        <item name="android:textColorPrimary">@color/wel_text_primary_theme_dark</item>
        <item name="android:textColorSecondary">@color/wel_text_primary_theme_dark</item>

        <item name="welcomeButtonBackground">@drawable/wel_button_borderless_background</item>
        <item name="welcomeButtonSkipStyle">@style/WelcomeScreenButton.Skip</item>
        <item name="welcomeButtonNextStyle">@style/WelcomeScreenButton.Next</item>
        <item name="welcomeButtonPrevStyle">@style/WelcomeScreenButton.Prev</item>
        <item name="welcomeButtonDoneStyle">@style/WelcomeScreenButton.Done</item>
        <item name="welcomeButtonDoneText">@string/wel_done</item>
        <item name="welcomeButtonSkipText">@string/wel_skip</item>
        <item name="welcomeButtonBarFirstStyle">@style/WelcomeScreenButton.LogIn</item>
        <item name="welcomeButtonBarSecondStyle">@style/WelcomeScreenButton.SignUp</item>

        <item name="welcomeButtonBarBackground">@color/wel_button_bar_background_dark</item>

        <item name="welcomeDividerStyle">@style/WelcomeScreenDivider</item>
        <item name="welcomeIndicatorStyle">@style/WelcomeScreenPageIndicator</item>

        <item name="welcomeNormalTextStyle">@style/WelcomeScreenText</item>
        <item name="welcomeLargeTextStyle">@style/WelcomeScreenText.Large</item>
        <item name="welcomeTitleTextStyle">@style/WelcomeScreenText.Title.Centered</item>

        <item name="windowActionBarOverlay">true</item>
        <item name="actionBarStyle">@style/Wel_TransparentActionBar</item>

        <!-- Make the background transparent, so swipeToDismiss will fade to the activity beneath -->
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:background">@color/wel_transparent</item>
        <item name="background">@color/wel_transparent</item>
        <item name="android:windowBackground">@color/wel_transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="WelcomeScreenTheme.Light">
        <item name="android:textColorPrimary">@color/wel_text_primary_theme_light</item>
        <item name="android:textColorSecondary">@color/wel_text_primary_theme_light</item>
        <item name="welcomeIndicatorStyle">@style/WelcomeScreenPageIndicator.Light</item>
        <item name="welcomeButtonBackground">
            @drawable/wel_button_borderless_background_theme_light
        </item>
        <item name="welcomeButtonDoneStyle">@style/WelcomeScreenButton.Done.Light</item>
        <item name="welcomeButtonBarBackground">@color/wel_button_bar_background_light</item>
    </style>

    <style name="WelcomeScreenTheme.SolidNavigation">
        <item name="android:windowTranslucentNavigation">false</item>
    </style>

    <style name="WelcomeScreenTheme.Light.SolidNavigation">
        <item name="android:windowTranslucentNavigation">false</item>
    </style>

    <style name="WelcomeScreenTheme.SolidNavigation.UnderStatusBar">
        <item name="welcomeLayoutFitsSystemWindows">false</item>
    </style>

    <style name="WelcomeScreenTheme.Light.SolidNavigation.UnderStatusBar">
        <item name="welcomeLayoutFitsSystemWindows">false</item>
    </style>

    <style name="WelcomeScreenText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
        <item name="android:layout_marginRight">@dimen/wel_text_horizontal_margin</item>
        <item name="android:layout_marginLeft">@dimen/wel_text_horizontal_margin</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <style name="WelcomeScreenText.Large">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:layout_marginBottom">@dimen/wel_title_bottom_margin</item>
    </style>

    <style name="WelcomeScreenText.Title" parent="WelcomeScreenText.Large">
        <item name="android:textSize">@dimen/wel_title_text_size</item>
    </style>

    <style name="WelcomeScreenText.Centered">
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="WelcomeScreenText.Large.Centered">
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="WelcomeScreenText.Title.Centered">
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="WelcomeScreenButton" parent="Widget.AppCompat.Button">
        <item name="android:singleLine">true</item>
        <item name="android:layout_marginLeft">@dimen/wel_flat_button_horizontal_margin</item>
        <item name="android:layout_marginTop">@dimen/wel_flat_button_vertical_margin</item>
        <item name="android:layout_marginRight">@dimen/wel_flat_button_horizontal_margin</item>
        <item name="android:layout_marginBottom">@dimen/wel_flat_button_vertical_margin</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:background">?attr/welcomeButtonBackground</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="WelcomeScreenButton.Borderless" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:singleLine">true</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:background">?attr/welcomeButtonBackground</item>
    </style>

    <style name="WelcomeScreenButton.Skip">
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <style name="WelcomeScreenButton.Done">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:tint">?android:attr/textColorPrimary</item>
        <item name="android:src">@drawable/wel_ic_done_white</item>
    </style>

    <style name="WelcomeScreenButton.Done.Light">
        <item name="android:src">@drawable/wel_ic_done_black</item>
    </style>

    <style name="WelcomeScreenButton.Next">
        <item name="android:src">@drawable/wel_ic_chevron_right_white_24dp</item>
        <item name="android:tint">?android:attr/textColorPrimary</item>
    </style>

    <style name="WelcomeScreenButton.Prev">
        <item name="android:src">@drawable/wel_ic_chevron_left_white_24dp</item>
        <item name="android:tint">?android:attr/textColorPrimary</item>
    </style>

    <style name="WelcomeScreenButton.LogIn" parent="WelcomeScreenButton.Borderless">
        <item name="android:text">@string/wel_log_in</item>
    </style>
    |

    <style name="WelcomeScreenButton.SignUp" parent="WelcomeScreenButton.Borderless">
        <item name="android:text">@string/wel_sign_up</item>
    </style>

    <style name="WelcomeScreenPageIndicator">
        <item name="indicatorColor">@color/wel_indicator_color_secondary_theme_dark</item>
        <item name="currentPageColor">@color/wel_indicator_color_primary_theme_dark</item>
        <item name="animation">fade</item>
    </style>

    <style name="WelcomeScreenPageIndicator.Light">
        <item name="indicatorColor">@color/wel_indicator_color_secondary_theme_light</item>
        <item name="currentPageColor">@color/wel_indicator_color_primary_theme_light</item>
    </style>

    <style name="WelcomeScreenDivider">
        <item name="android:background">#00000000</item>
        <item name="android:layout_height">1dp</item>
    </style>

    <style name="WelcomeScreenDivider.Light">
        <item name="android:background">@color/wel_divider_color_theme_light</item>
    </style>

    <style name="WelcomeScreenDivider.Dark">
        <item name="android:background">@color/wel_divider_color_theme_dark</item>
    </style>


    <!-- welcome screen -->
    <style name="CustomWelcomeScreenTheme" parent="WelcomeScreenTheme.SolidNavigation">
        <item name="welcomeIndicatorStyle">@style/MyWelcomeIndicator</item>
    </style>

    <style name="MyWelcomeIndicator" parent="WelcomeScreenPageIndicator">
        <item name="indicatorColor">@color/highlight_yellow_trans</item>
        <item name="currentPageColor">@color/yellow</item>
        <item name="animation">slide</item>
    </style>

    <style name="CustomAboutLibrariesStyle" parent="Theme.MaterialComponents.NoActionBar">
        <!-- AboutLibraries specific values -->
        <item name="aboutLibrariesCardBackground">?cardBackgroundColor</item>
        <item name="aboutLibrariesDescriptionTitle">?android:textColorPrimary</item>
        <item name="aboutLibrariesDescriptionText">?android:textColorSecondary</item>
        <item name="aboutLibrariesDescriptionDivider">@color/opensource_divider</item>
        <item name="aboutLibrariesOpenSourceTitle">?android:textColorPrimary</item>
        <item name="aboutLibrariesOpenSourceText">?android:textColorSecondary</item>
        <item name="aboutLibrariesSpecialButtonText">?android:textColorPrimary</item>
        <item name="aboutLibrariesOpenSourceDivider">@color/opensource_divider</item>
    </style>
</resources>